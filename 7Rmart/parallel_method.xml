<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="parallelmethodtesting" parallel="methods" thread-count="2">

<listeners> 
<listener class-name="generatereport.Listeners"></listener>
</listeners>

  <test  name="chrometest">
  <parameter name="browser" value="chrome"></parameter>
    <classes>
			<class name="testscript.LoginTest">
		
				<methods>
					<include name="verifyTheUserUnableToLoginUsingInvalidPassword"></include>
						<include name="verifyTheUserUnableToLoginUsingInvalidUsernameAndPassword"></include>
				</methods>
			</class>
		</classes>
  </test>
  
  
</suite> <!-- Suite -->
